# ============================================
# RanchLink Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to Git!

# ============================================
# Database (Supabase) - REQUIRED
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://xxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGci...
SUPABASE_SERVICE_KEY=eyJhbGci... # Server-side only, keep secret!

# ============================================
# Blockchain (Base L2) - REQUIRED
# ============================================
ALCHEMY_BASE_RPC=https://base-mainnet.g.alchemy.com/v2/YOUR_KEY
ALCHEMY_BASE_SEPOLIA_RPC=https://base-sepolia.g.alchemy.com/v2/YOUR_KEY # For testnet
NEXT_PUBLIC_BASE_CHAIN_ID=8453

# ============================================
# IPFS Storage (Pinata) - REQUIRED ✅
# ============================================
PINATA_API_KEY=ranchLink by Ritxma:768fb0934fcd6f8e44ea
# Note: This might need to be the full JWT token - check Pinata dashboard

# Alternative: Web3.Storage (if not using Pinata)
WEB3STORAGE_TOKEN=your-web3storage-token

# ============================================
# Wallet Infrastructure (Coinbase CDP) - REQUIRED
# ============================================
CDP_API_KEY=your-cdp-api-key
CDP_APP_ID=your-app-id
CDP_SERVER_WALLET_ADDRESS=0x... # Server wallet address (NOT Ledger!)
CDP_SERVER_WALLET_PRIVATE_KEY=0x... # Server wallet private key (keep secret!)

# ============================================
# Server Wallet (Hot Wallet) - REQUIRED
# ============================================
SERVER_WALLET_ADDRESS=0x... # Different from Ledger!
SERVER_WALLET_PRIVATE_KEY=0x... # Keep secret, never commit!
SERVER_WALLET_DAILY_LIMIT=0.1 # ETH daily spending limit

# ============================================
# Contract Addresses (After Deployment)
# ============================================
NEXT_PUBLIC_CONTRACT_RWA=0x... # RanchLinkRWA contract on Base
NEXT_PUBLIC_CONTRACT_REGISTRY=0x... # SecureRegistry contract on Base

# ============================================
# Treasury Addresses (Ledger Wallet) - ✅ Already Set
# ============================================
NEXT_PUBLIC_TREASURY_BTC=bc1q5n769dgm6dza7z4ytkt8euldywdnequsa40ue4
NEXT_PUBLIC_TREASURY_ETH=0x223C5FEAA2523E0c3B13e0C43F662653B9726cb6
NEXT_PUBLIC_TREASURY_BASE=0x223C5FEAA2523E0c3B13e0C43F662653B9726cb6
NEXT_PUBLIC_TREASURY_SOL=65T2bjQaHD9yzqRN4uPg6Wrk3kz3NDUr17ofbSwtbLAz

# ============================================
# Payment Processing (Optional - For Fiat)
# ============================================
# Stripe (Credit card → Crypto)
STRIPE_SECRET_KEY=sk_live_... # or sk_test_... for testing
STRIPE_PUBLISHABLE_KEY=pk_live_... # or pk_test_... for testing

# Coinbase Commerce (Alternative to Stripe)
COINBASE_COMMERCE_API_KEY=your-commerce-key
COINBASE_COMMERCE_WEBHOOK_SECRET=your-webhook-secret

# ============================================
# Security & Monitoring (Recommended)
# ============================================
# Sentry (Error tracking)
SENTRY_DSN=https://...@sentry.io/...

# Basescan API (Contract verification)
BASESCAN_API_KEY=your-basescan-key

# Admin (Optional)
ADMIN_KEY=your-secure-admin-key

# ============================================
# App Configuration
# ============================================
NEXT_PUBLIC_APP_URL=https://ritxma.com/ranchlink
NEXT_PUBLIC_BASE_PATH=/ranchlink
NODE_ENV=development # or production

